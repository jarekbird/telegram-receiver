# ==============================================================================
# Environment Variables Configuration Template
# ==============================================================================
# This file serves as a template for environment variable configuration.
# Copy this file to .env.development, .env.test, or .env.production and
# update the values according to your environment.
#
# Note: Never commit actual secrets to version control. Use placeholder values
# in this example file and set real values in your local .env files or via
# deployment configuration.
#
# This file replaces Rails environment-specific configuration files:
# - jarek-va/config/application.rb - Defines environment variables using ENV.fetch()
# - jarek-va/config/environments/development.rb - Development environment config
# - jarek-va/config/environments/test.rb - Test environment config
# - jarek-va/config/environments/production.rb - Production environment config
# ==============================================================================

# ------------------------------------------------------------------------------
# Application Environment
# ------------------------------------------------------------------------------
# Node.js environment (development, test, production)
# Controls various behaviors like error reporting and logging verbosity
# Matches Rails RAILS_ENV behavior
NODE_ENV=development

# Server port number (default: 3000)
# The port on which the Express server will listen for incoming requests
# Matches Rails config/puma.rb port configuration
PORT=3000

# Logging level (info, debug, warn, error)
# Controls the verbosity of application logs
# Matches Rails config/application.rb LOG_LEVEL configuration
# Default: 'info'
LOG_LEVEL=info

# ------------------------------------------------------------------------------
# Application Metadata
# ------------------------------------------------------------------------------
# Application name
# Matches Rails config/application.rb APP_NAME configuration
# Default: 'Virtual Assistant API'
APP_NAME=Virtual Assistant API

# Application version
# Matches Rails config/application.rb APP_VERSION configuration
# Default: '1.0.0'
APP_VERSION=1.0.0

# ------------------------------------------------------------------------------
# Webhook Security
# ------------------------------------------------------------------------------
# Secret token for webhook verification
# Should be a secure random string for webhook security
# Matches Rails config/application.rb WEBHOOK_SECRET configuration
# Default: 'changeme'
WEBHOOK_SECRET=changeme

# ------------------------------------------------------------------------------
# Telegram Bot Configuration
# ------------------------------------------------------------------------------
# Telegram Bot API token
# Get this from @BotFather on Telegram
# Matches Rails config/application.rb TELEGRAM_BOT_TOKEN configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Secret token for Telegram webhook verification
# Should be a secure random string for webhook security
# Matches Rails config/application.rb TELEGRAM_WEBHOOK_SECRET configuration
# Default: 'changeme'
TELEGRAM_WEBHOOK_SECRET=changeme

# Base URL for Telegram webhook callbacks
# Matches Rails config/application.rb TELEGRAM_WEBHOOK_BASE_URL configuration
TELEGRAM_WEBHOOK_BASE_URL=http://localhost:3000

# ------------------------------------------------------------------------------
# Cursor Runner Configuration
# ------------------------------------------------------------------------------
# URL for the cursor-runner service
# Matches Rails config/application.rb CURSOR_RUNNER_URL configuration
# Default: 'http://localhost:3001'
CURSOR_RUNNER_URL=http://localhost:3001

# Timeout for cursor-runner requests (in seconds)
# Matches Rails config/application.rb CURSOR_RUNNER_TIMEOUT configuration
# Default: 300
CURSOR_RUNNER_TIMEOUT=300

# ------------------------------------------------------------------------------
# Redis Configuration
# ------------------------------------------------------------------------------
# Redis connection URL
# Matches Rails Sidekiq Redis configuration
REDIS_URL=redis://localhost:6379

# ------------------------------------------------------------------------------
# ElevenLabs Configuration
# ------------------------------------------------------------------------------
# ElevenLabs API key for voice services
# Matches Rails config/application.rb ELEVENLABS_API_KEY configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Speech-to-text model ID (e.g., 'scribe_v1', 'scribe_v1_experimental', 'scribe_v2')
# Matches Rails config/application.rb ELEVENLABS_STT_MODEL_ID configuration
ELEVENLABS_STT_MODEL_ID=your_stt_model_id_here

# Text-to-speech model ID (e.g., 'eleven_turbo_v2_5', 'eleven_multilingual_v2')
# Matches Rails config/application.rb ELEVENLABS_TTS_MODEL_ID configuration
ELEVENLABS_TTS_MODEL_ID=your_tts_model_id_here

# Voice ID for text-to-speech
# Matches Rails config/application.rb ELEVENLABS_VOICE_ID configuration
ELEVENLABS_VOICE_ID=your_voice_id_here

# ------------------------------------------------------------------------------
# Notes Repository Configuration
# ------------------------------------------------------------------------------
# Default repository for note operations (optional)
# Matches Rails config/application.rb DEFAULT_NOTES_REPOSITORY configuration
DEFAULT_NOTES_REPOSITORY=
